@page "/Entry/Index/{search?}"
@model CrudProject.Pages.Entry.Index.IndexRazorPagesModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home";
}

<h1>Razor Pages Implementation</h1>
<p>Search-value = @Model.Search</p>
<p>Add your entry to guestbook.</p>

@if (TempData.TryGetValue("created-id", out var createdId))
{
    <p>Was added entry with id - @createdId</p>
}

<div class="row">
    <div class="col-md-8">
        <form method="post">
            @if (Model.Entries.Any() == true)
            {
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                        <th>Content</th>
                        <th>Likes</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var entry in Model.Entries)
                    {
                        <tr>
                            <td>@entry.Id</td>
                            <td>@entry.Email</td>
                            <td>@entry.Content</td>
                            <td>@entry.Likes</td>
                            <td>
                                <button type="submit" asp-page-handler="like" 
                                        asp-route-id="@entry.Id" class="btn btn-info">like</button>
                                <a asp-page="../Edit/Edit" asp-route-id="@entry.Id" class="btn btn-warning">edit</a>
                                <button type="submit" asp-page-handler="delete" 
                                        asp-route-id="@entry.Id"
                                        class="btn btn-danger"
                                        onclick="return confirm('Delete this entry?')">delete</button>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            }
            else
            {
                <p>No entries found.</p>
            }
            
            <a asp-page="../Create/Create" class="btn btn-primary">Create New</a>
        </form>
    </div>
    
    <div class="col-md-4">
        @* sync Invoke - <vc:random-entry></vc:random-entry> *@
        @* Не работает в моем тестовом проекте. async - @await Component.InvokeAsync("RandomEntry") *@
    </div>
</div>

@Html.DisplayFor(model => model.Flag)